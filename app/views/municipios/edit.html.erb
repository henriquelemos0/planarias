<% form_for(@municipio) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :nome %><br />
    <%= f.text_field :nome %>
  </p>
  <p>
    <%= f.label :estado_id %><br />
    <%= @estados = Estado.find(:all, :order => "pais.nome", :order => "nome")
