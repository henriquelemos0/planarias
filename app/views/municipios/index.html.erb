<h1>Listando municípios</h1>

<% if @municipios.size.zero? %>
  <br />
  <p> Nenhum município cadastrado.</p>
<% else %>
<table>
  <tr>
    <th>País</th>
    <th>Estado</th>
    <th>Município</th>
  </tr>

<% @municipios.each do |municipio| %>
  <tr>
    <td><%=h municipio[0] %></td>
    <td><%=h municipio[1] %></td>
    <td><%=h municipio[2] %></td>
    <td><%= link_to 'Ver', 'municipios/'+municipio[3].to_s %></td>
    <td><%= link_to 'Editar', edit_municipio_path(municipio) %></td>
    <td><%= link_to 'Excluir', 'municipios/'+municipio[3].to_s, :confirm => 'Você tem certeza?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<%end%>
  
<br />

<%= link_to 'Criar municipio', new_municipio_path %>