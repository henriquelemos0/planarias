<h1>Criar especie</h1>

<%= form_for(@especie) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :nome %><br />
    <%= f.text_field :nome %>
  </p>
  <p>
    <%= f.label :bibliografia %><br />
    <%= f.text_area :bibliografia %>
  </p>
  <p>
    <%= f.submit 'Criar' %>
  </p>
<% end %>

<%= link_to 'Voltar', especies_path %>