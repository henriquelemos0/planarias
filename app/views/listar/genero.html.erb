<h1>Buscar por Classificação Taxonômica</h1>

<div id="content">
  <%if @especies.size.zero?%>
    <br/>
    <p>Nenhuma espécie encontrada.</p>
  <%else%>
    <table>
      <tr>
        <th>Espécies</th>
      </tr>
  <% @especies.each do |especie| %>
      <tr>
        <td><%= link_to especie.nome, :controller => 'verespecie', :action => 'show', :id => especie.id %></td>
      </tr>
    <%end%>
    </table>
  <%end%>

  <p><%= link_to 'Voltar', :controller => 'listar', :action => 'taxonomia' %></p>
    
</div>
