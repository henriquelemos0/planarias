<% form_for(@subfamilia) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :nome %><br />
    <%= f.text_field :nome %>
  </p>
  <p>
    <%= f.label :familia_id %><br />
    <%= @familias = Familia.find(:all, :order => "nome" )
