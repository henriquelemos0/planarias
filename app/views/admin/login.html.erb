<div class="login">

<h1>Login</h1>
<%=form_tag do %>
  <p>
    <label for="nome">Nome:</label>
    <%= text_field_tag :nome, params[:nome] %>
  </p>
  <p>
    <label for="password">Senha:</label>
    <%= password_field_tag :password, params[:password] %>
  </p>
  <p>
    <%= submit_tag "Login" %>
  </p>
<% end %>

</div>